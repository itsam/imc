<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/components/com_imc/models/fields">

              <field name="id" type="text" default="0" label="COM_IMC_FORM_LBL_KEY_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="title" type="text"
                
            label="COM_IMC_FORM_LBL_KEY_TITLE"
            description="COM_IMC_FORM_DESC_KEY_TITLE" 
                
                
                 required="true" 
            filter="string" /> 

       <field name="skey" type="text"
                
            label="COM_IMC_FORM_LBL_KEY_SKEY"
            description="COM_IMC_FORM_DESC_KEY_SKEY" 
                
                
                 required="true" 
            filter="string"
            maxlength="16" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_IMC_FORM_LBL_KEY_CREATED_BY"
            description="COM_IMC_FORM_DESC_KEY_CREATED_BY"  /> 

       <field name="created" type="timecreated" default="" 
            label="COM_IMC_FORM_LBL_KEY_CREATED"
            description="COM_IMC_FORM_DESC_KEY_CREATED"  /> 

       <field name="updated" type="timeupdated" default="" 
            label="COM_IMC_FORM_LBL_KEY_UPDATED"
            description="COM_IMC_FORM_DESC_KEY_UPDATED"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" /> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_imc"
                            section="key"
                        />

	</fieldset>

</form>
