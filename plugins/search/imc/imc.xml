    <copyright>Copyright (C) 2015. All rights reserved.</copyright>
    <license>GNU AFFERO GENERAL PUBLIC LICENSE Version 3; see LICENSE</license>
    <authorEmail>tsampoulatidis@gmail.com</authorEmail>
    <authorUrl>https://github.com/itsam</authorUrl>
    <version>3.0.0</version>
    <description>PLG_SEARCH_IMC_XML_DESCRIPTION</description>

    <files>
        <filename plugin="imc">imc.php</filename>
        <filename>index.html</filename>
        <filename>language/en-GB/en-GB.plg_search_imc.sys.ini</filename>
        <filename>language/el-GR/el-GR.plg_search_imc.sys.ini</filename>
    </files>

    <languages folder="language">
        
			<language tag="en-GB">en-GB/en-GB.plg_search_imc.ini</language>
			<language tag="en-GB">en-GB/en-GB.plg_search_imc.sys.ini</language>
			<language tag="el-GR">el-GR/el-GR.plg_search_imc.ini</language>
			<language tag="el-GR">el-GR/el-GR.plg_search_imc.sys.ini</language>
    </languages>

    <config>
        <fields name="params">

            <fieldset name="basic">
                <field name="search_limit" type="text" default="50" size="5"
                       description="PLG_SEARCH_IMC_FIELD_SEARCHLIMIT_DESC"
                       label="PLG_SEARCH_IMC_FIELD_SEARCHLIMIT_LABEL" />
            </fieldset>

        </fields>
    </config>
</extension>
